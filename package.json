{
  "name": "@socialtables/saml-protocol",
  "version": "0.3.4",
  "description": "A SAML protocol implementation for SPs and IDPs without opinionated framework bindings",
  "author": "Social Tables (https://www.socialtables.com)",
  "main": "./dist/index.js",
  "keywords": [
    "saml",
    "authentication",
    "sso"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/socialtables/saml-protocol.git"
  },
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "build": "rm -rf dist/** && ./node_modules/.bin/babel lib --out-dir dist --ignore *.spec.js,testHelpers/*,examples/*",
    "lint": "npx eslint lib",
    "prepare": "npm run lint && npm test && npm run build",
    "test": "mocha --compilers js:@babel/register --recursive \"test/**/*.js\"",
    "test:watch": "npm test -- --watch"
  },
  "dependencies": {
    "moment": "^2.20.1",
    "node-forge": "0.7.6",
    "xml-crypto": "0.10.1",
    "xml-encryption": "0.11.2",
    "xmlbuilder": "10.0.0",
    "xmldom": "0.1.22",
    "xpath": "0.0.27",
    "xpath.js": "1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^9.0.0",
    "chai": "^4.1.2",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0"
  },
  "bugs": {
    "url": "https://github.com/socialtables/saml-protocol/issues"
  },
  "homepage": "https://github.com/socialtables/saml-protocol#readme",
  "directories": {
    "test": "test"
  }
}
