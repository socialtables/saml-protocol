{
    "rules": {
        "indent": [
            2,
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "brace-style": [
            2,
            "stroustrup",
            {
                "allowSingleLine": true
            }
        ],
        "require-yield": [
            0
        ],
        "node/no-deprecated-api": [
            0
        ],
        "node/no-unpublished-require": [
            0
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "json",
        "node",
        "mocha"
    ]
}
